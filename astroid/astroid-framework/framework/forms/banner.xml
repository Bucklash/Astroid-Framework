<?xml version="1.0" encoding="UTF-8"?>
<form>
   <fields name="params">
      <fieldset label="&#127937; Astroid Banner" name="astroid_banner" addfieldpath="/libraries/astroid/framework/fields">
         <field name="banner_note" type="note" class="alert alert-info" label="" description="You must publish the Banner element using the layout manager in Astroid for this feature to work." />
         <field name="astroid_banner_enabled" type="radio" default="0" label="Enable Banner" description="Enable the banner to show a custom header on your page." class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
         </field>
         <field showon="astroid_banner_enabled:1" name="astroid_banner_title" type="text" default="" label="Banner Title">
         </field>
         <field showon="astroid_banner_enabled:1" name="astroid_banner_subtitle" type="text" default="" label="Banner subtitle">
         </field>
         <field showon="astroid_banner_enabled:1" name="astroid_banner_bgcolor" type="color" default="" label="Background color">
         </field>
         <field showon="astroid_banner_enabled:1" name="astroid_banner_bgimage" type="media" default="" label="Background image">
         </field>
         <field showon="astroid_banner_enabled:1" name="astroid_banner_title_tag" type="headertag" default="h3" label="Banner Title Tag">
         </field>
         <field showon="astroid_banner_enabled:1" name="astroid_banner_class" type="text" default="" label="Banner Class">
         </field>
         <field showon="astroid_banner_enabled:1" name="astroid_banner_wrapper" type="list" default="" label="Banner Layout">
            <option value="">Default</option>
            <option value="container">Container</option>
            <option value="container-fluid">Container Fluid</option>
         </field>
      </fieldset>
   </fields>
</form>
